<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/day"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuptitle"
        android:text="Welcome"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/colorButton2"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="40dp"
        android:text="Sign Up to continue"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/signuptitle"/>

    <FrameLayout

        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/profilepic"

        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/texts"
        android:layout_marginTop="5dp"
        android:visibility="gone">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width= "125.00dp"
            android:layout_height="125.00dp"
            android:background="@drawable/baseline_circle_23"
            android:scaleType="centerCrop"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/textAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Add Image"

            android:textColor="@color/white"
            />
    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/profilepic"
        android:hint="Username"
        android:textColorHint="@color/alwayswhite"
        android:textColor="@color/alwayswhite"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emails"
        android:layout_below="@id/username"
        android:hint="Email"
        android:textColorHint="@color/alwayswhite"
        android:textColor="@color/alwayswhite"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/emailpic"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_below="@id/emails"

        android:hint="Password"
        android:textColorHint="@color/alwayswhite"
        android:textColor="@color/alwayswhite"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmpass"
        android:layout_below="@id/pass"
        android:hint="Confirm Password"
        android:textColorHint="@color/alwayswhite"
        android:textColor="@color/alwayswhite"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/signupbutton"
        android:text="SIGN UP"
        android:layout_below="@id/confirmpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:backgroundTint="@color/colorButton2"
        app:cornerRadius="@dimen/_8sdp"
        android:fontFamily="sans-serif-smallcaps"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/already"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorButton2"
        android:gravity="center"
        android:text="Back to Sign in"
        android:layout_below="@id/signupbutton"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/username"
        android:visibility="gone"
        android:layout_above="@id/signupbutton"/>

</RelativeLayout>
</ScrollView>